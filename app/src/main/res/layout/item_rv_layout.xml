<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"> <!-- Optional background color -->

            <!-- Row 1 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/id_number"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:text="Cell 1"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/beechinor"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Cell 2" />

                <TextView
                    android:id="@+id/acres"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Cell 3" />
            </TableRow>

            <!-- Row 2 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/pattern"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Cell 4" />

                <TextView
                    android:id="@+id/est_loads"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Cell 5" />

                <TextView
                    android:id="@+id/actual_loads"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Cell 6" />
            </TableRow>

            <!-- Row 2 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/location"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Cell 4" />

                <TextView
                    android:id="@+id/stewarded"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Stewarded" />

                <TextView
                    android:id="@+id/split_fields"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Split Field" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/harv_used"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Cell 4" />

                <TextView
                    android:id="@+id/har_started"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Cell 5" />

                <TextView
                    android:id="@+id/har_completed"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Cell 6" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/notes"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_shape"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Notes" />

            </TableRow>


            <!-- Add more rows as needed -->
        </TableLayout>
    </RelativeLayout>
</layout>